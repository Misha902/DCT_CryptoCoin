<Window x:Class="DCT_CryptoCoin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCT_CryptoCoin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name = "dataGrid" AutoGenerateColumns="false" Grid.Row="0" Margin="10,10,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Name" Binding = "{Binding name}" />
                <DataGridTextColumn Header = "Exchange_id" Binding = "{Binding exchange_id}" />
                <DataGridTextColumn Header = "Website" Binding = "{Binding website}"/>
                <DataGridTextColumn Header = "Volume_24h" Binding = "{Binding volume_24h}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
